{
    "minVersion": "0.9.0",
    "services": {
        "{ServiceName}": {
            "image": "bellamy/wallos:latest",
            "container_name": "{ServiceName}",
            "hostname": "{ServiceName}",
            "restart": "unless-stopped",
            "environment": [
                "TZ=Europe/Warsaw"
            ],
            "labels": {
                "cosmos-persistent-env": "TZ",
                "cosmos-network-name": "AUTO",
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://pgodzwa.github.io/cosmos-pg-store/Wallos/icon.png"
            },
            "volumes": [{
                "source": "{ServiceName}-db",
                "target": "/var/www/html/db",
                "type": "volume"
            },
            {
                "source": "{ServiceName}-logos",
                "target": "/var/www/html/images/uploads/logos",
                "type": "volume"
            }],
            "routes": [{
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:80",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": {
                    "Enabled": true
                }
            }]
        }
    }
}