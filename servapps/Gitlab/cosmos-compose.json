{
    "cosmos-installer": {
        "post-install": [{
            "type": "info",
            "label": "The SSH port for this container is 2424"
        }]
    },
    "minVersion": "0.9.0",
    "services": {
        "{ServiceName}": {
            "image": "zengxs/gitlab:ce",
            "container_name": "{ServiceName}",
            "hostname": "{ServiceName}",
            "restart": "unless-stopped",
            "environment": [
                "GITLAB_OMNIBUS_CONFIG=external_url '{Hostnames.{StaticServiceName}.{StaticServiceName}.host}'; gitlab_rails['gitlab_shell_ssh_port'] = 2424"
            ],
            "ports": [
                "2424:22"
            ],
            "shm_size": "256m",
            "labels": {
                "cosmos-persistent-env": "GITLAB_OMNIBUS_CONFIG",
                "cosmos-network-name": "AUTO",
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://pgodzwa.github.io/cosmos-pg-store/Gitlab/icon.png"
            },
            "volumes": [{
                "source": "{ServiceName}-data",
                "target": "/var/opt/gitlab",
                "type": "volume"
            },
            {
                "source": "{ServiceName}-config",
                "target": "/etc/gitlab",
                "type": "volume"
            },
            {
                "source": "{ServiceName}-logs",
                "target": "/var/log/gitlab",
                "type": "volume"
            }],
            "routes": [{
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:80",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": {
                    "Enabled": true
                }
            }]
        }
    }
}